/* pages/index/index.wxss */

.page {
    display: flex;
    flex-direction: column;
    width: 100%;
    height: 100%;
}

.head {
    display: flex;
    flex-direction: row;
    width: 100%;
    height: 70px;
    border-bottom: 1px solid #bfbfbf;
    /* background-color: green;  */
}

.content-display {
    width: 100%;
    height: 85%;
    display: flex;
    flex-direction: column;
    /* align-content: center; *//* background-color: darkorange;  */
}

.time-display {
    flex: 2;
    display: flex;
    flex-direction: column;
    /* background-color: tomato; */
}

.time-display .time-date {
    flex: 2;
    display: flex;
    justify-content: center;
    padding-top: 10px;
}

.time-display .time-time {
    flex: 3;
    display: flex;
    justify-content: center;
}

.add-display {
    flex: 1;
}

.add-display image {
    width: 85%;
    height: 90%;
}

.list-item {
    display: flex;
    flex-direction: row;
    margin-left: 5px;
    width: 95%;
    /* height: 40px; */
    border-bottom: 1px solid #bfbfbf;
    padding-top:3px;
    padding-bottom:3px;
}

.list-item .content-list-time{
    font-size:16px;
    color:#353535;
    padding-top:5px;
    padding-left:25px;
    width:40%;
}

.list-item .content-list-detail{
    width:60%;
    padding-left:15px;
    border-left: 2px solid blue;
}
.list-item .content-list-detail .detail-title{
    font-size:16px;
}
.list-item .content-list-detail .detail-location{
    font-size:13px;
    color:#888888;
}
